#include <Servo.h>

String mensaje = "";
Servo servoMotor;

void setup() {
  Serial1.begin(9600);

  servoMotor.attach(5);  // Pin de se√±al del servo (puede ser 5 o cualquier PWM)
}

void loop() {

  while (Serial1.available()) {
    char c = Serial1.read();
    if (c == '\n') {
      procesarComando(mensaje);
      mensaje = "";
    } else {
      mensaje += c;
    }
  }
}

void procesarComando(String cmd) {
  if (cmd.startsWith("DIR:")) {
    int angulo = cmd.substring(4).toInt();

    // Limitar por seguridad
    angulo = constrain(angulo, 0, 180);

    servoMotor.write(angulo);
  }
}
